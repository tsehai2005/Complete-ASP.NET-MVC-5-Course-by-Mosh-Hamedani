@using Vidly.Models
@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date:@Model.ReleaseDate.DayOfWeek @Model.ReleaseDate.ToString("MMMM d,yyyy")</li>
    <li>Added Date:@Model.DateAdded.DayOfWeek @Model.DateAdded.ToString("MMMM d,yyyy")</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>

