@using Vidly.Models
@model Vidly.ViewModel.RandomMovieViewModel
@{ 
    var className = Model.Customers.Count > 4 ? "popular" : null;
}
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="@className">@Model.Movie.Name</h2> 
@*<h2>@(((Movie) ViewData["Movie"]).Name)</h2>
<h2>@(((Movie)ViewBag.RandomMovie).Name)</h2>*@
@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before</text>
}
else
{
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li> @customer.Name </li>
    }

</ul>
}

